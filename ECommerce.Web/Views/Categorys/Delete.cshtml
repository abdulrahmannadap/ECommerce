@{
}
@model Category
<form asp-controller="Categorys" asp-action="DeleteConfirme" method="post">
    <input asp-for="Id" hidden/>
    <div class="card col-md-6">
        <div class="card-header bg-light">
            Are you sure to  delete this ?
        </div>
        <div class="card-body">
            <ul>
                <li>@Model.Id</li>
                <li>@Model.Name</li>
            </ul>
        </div>
        <div class="text-center m-2">
            <i class="bi bi-trash-fill"></i>
            <input type="submit" value="Delete" class="btn btn-dark " asp-controller="Categorys" asp-action="DeleteConfirme" />
        </div>
    </div>

</form>